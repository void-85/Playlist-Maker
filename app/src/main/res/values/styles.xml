<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/app_font_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="main_screen_button"
        parent="main_font">
        <item name="android:backgroundTint">@color/main_screen_button_background</item>
        <item name="android:textColor">@color/main_screen_button_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius"</item>
        <item name="iconSize">@dimen/app_icon_size"</item>
        <item name="iconGravity">textStart"</item>
        <item name="iconPadding">@dimen/icon_padding"</item>
        <item name="iconTint">@color/main_screen_button_text"</item>
    </style>

</resources>