<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- NO COLOR -->
    <style name="main_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/app_main_font_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- NO COLOR -->
    <style name="small_font">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/app_small_font_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- NO COLOR -->
    <style name="even_smaller_font">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/app_even_smaller_font_size</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <!-- NO COLOR -->
    <style name="search_info_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_info_message_font</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- NO COLOR -->
    <style name="search_info_button"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_info_message_button_font</item>
        <item name="android:textAllCaps">false</item>
    </style>







    <!-- MEDIAPLAYER FONTS, NO COLOR -->
    <style name="media_player_big_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- MEDIAPLAYER FONTS, NO COLOR -->
    <style name="media_player_medium_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- MEDIAPLAYER FONTS, NO COLOR -->
    <style name="media_player_time_code_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- MEDIAPLAYER FONTS, NO COLOR -->
    <style name="media_player_details_font">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>




    <!-- NO COLOR -->
    <style name="bottom_nav_view_items_text"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>






    <style name="main_screen_button"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/app_main_font_size</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:backgroundTint">@color/main_screen_button_background</item>
        <item name="android:textColor">@color/main_screen_button_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconSize">@dimen/app_icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/main_screen_button_text</item>
    </style>



    <style name="settings_screen_items_text"
        parent="small_font">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/settings_parameters_padding_width</item>
        <item name="android:layout_marginTop">@dimen/settings_parameters_padding_height</item>
        <item name="android:textColor">@color/settings_screen_text</item>
    </style>

    <style name="settings_screen_items_icons"
        parent="small_font">

        <item name="android:layout_width">@dimen/settings_icon_size</item>
        <item name="android:layout_height">@dimen/settings_icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/settings_icon_padding_top</item>
        <item name="android:layout_marginEnd">@dimen/settings_icon_padding_right</item>
    </style>


</resources>