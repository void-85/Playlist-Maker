<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlaylistMaker"
        tools:targetApi="31" >
        <activity
            android:name=".ui.library.act.LibraryActivity"
            android:exported="false"
            android:label="@string/title_activity_library"
            android:theme="@style/Theme.PlaylistMaker.NoActionBar" />
        <activity
            android:name=".ui.player.act.MediaActivity"
            android:exported="false" />
        <activity
            android:name=".ui.search.act.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings.act.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.act.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>